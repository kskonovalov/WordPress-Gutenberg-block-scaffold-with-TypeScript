{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "create-block/test-block",
	"version": "0.1.0",
	"title": "Test Block",
	"category": "widgets",
	"icon": "admin-site",
	"description": "Doing something really cool with Test Block and WordPress.",
	"example": {},
	"supports": {
		"align": ["left", "center", "right"],
		"alignWide": true,
		"anchor": true,
		"ariaLabel": true,
		"background": {
			"backgroundImage": true,
			"backgroundSize": true
		},
		"border": {
			"radius": true,
			"style": true,
			"width": true
		},
		"className": true,
		"color": {
			"background": true,
			"link": true,
			"text": true
		},
		"customBorder": {
			"radius": true,
			"style": true,
			"width": true
		},
		"customClassName": true,
		"customColor": {
			"background": true,
			"link": true,
			"text": true
		},
		"customGradient": {
			"background": true,
			"text": true
		},
		"customSpacing": {
			"margin": true,
			"padding": true
		},
		"customUnits": {
			"margin": true,
			"padding": true
		},
		"html": true,
		"inserter": true,
		"interactivity": true,
		"layout": {
			"allowCustomContentAndWideSize": true,
			"allowEditing": true,
			"allowInheriting": true,
			"allowJustification": true,
			"allowOrientation": true,
			"allowSizingOnChildren": true,
			"allowSwitching": true,
			"allowVerticalAlignment": true,
			"default": true
		},
		"lock": true,
		"multiple": true,
		"reusable": true,
		"renaming": true,
		"shadow": true,
		"spacing": {
			"margin": true,
			"padding": true
		},
		"splitting": true,
		"typography": {
			"fontSize": true,
			"letterSpacing": true,
			"lineHeight": true,
			"textTransform": true
		}
	},
	"attributes": {
		"showPrefix": {
			"type": "boolean"
		},
		"prefix": {
			"type": "string"
		},
		"media": {
			"type": "object",
			"properties": {
				"id": {
					"type": "number"
				},
				"url": {
					"type": "string"
				},
				"alt": {
					"type": "string"
				},
				"title": {
					"type": "string"
				},
				"width": {
					"type": "number"
				},
				"height": {
					"type": "number"
				}
			}
		}
	},
	"textdomain": "test-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js"
}
